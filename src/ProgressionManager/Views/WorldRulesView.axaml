<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ProgressionManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:WorldRulesViewModel"
             x:Class="ProgressionManager.Views.WorldRulesView">

    <Design.DataContext>
        <vm:WorldRulesViewModel/>
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Spacing="24">

            <!-- HEADER -->
            <StackPanel Spacing="6">
                <TextBlock Text="World Rules"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#FFFFFF"/>

                <TextBlock Text="Define stats, formulas, and progression systems"
                           FontSize="14"
                           Foreground="#9AA5CE"/>
            </StackPanel>

            <!-- STATS SECTION -->
            <Border Background="#12151B"
                    CornerRadius="14"
                    Padding="20">

                <StackPanel Spacing="16">

                    <TextBlock Text="Base and Derived Stats"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#FFFFFF"/>

                    <DataGrid AutoGenerateColumns="False"
                              GridLinesVisibility="None"
                              RowHeight="44"
                              ItemsSource="{Binding Stats}"
                              Background="#0F1115"
                              BorderThickness="0">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Stat"
                                                Binding="{Binding Name}"
                                                Width="1.2*"/>
                            <DataGridTextColumn Header="Base"
                                                Binding="{Binding BaseValue}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Formula"
                                                Binding="{Binding Formula}"
                                                Width="2*"/>
                        </DataGrid.Columns>

                    </DataGrid>

                    <TextBlock Text="Derived stats use formulas (e.g. HP = VIT × 12 + Level × 5)"
                               FontSize="12"
                               Foreground="#7A7F99"/>

                </StackPanel>
            </Border>

            <!-- XP CURVE SECTION -->
            <Border Background="#12151B"
                    CornerRadius="14"
                    Padding="20">

                <StackPanel Spacing="18">

                    <TextBlock Text="Experience and Level Curve"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#FFFFFF"/>

                    <!-- Curve Type -->
                    <StackPanel Orientation="Horizontal"
                                Spacing="12">
                        <TextBlock Text="Curve Type"
                                   VerticalAlignment="Center"
                                   Foreground="#C0CAF5"/>

                        <ComboBox Width="220"
                                  SelectedItem="{Binding SelectedCurveType}">
                            <ComboBoxItem Content="Linear"/>
                            <ComboBoxItem Content="Exponential"/>
                            <ComboBoxItem Content="Custom Formula"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Graph -->
                    <Border Height="260"
                            Background="#0F1115"
                            CornerRadius="12">

                        <Grid>
                            <TextBlock Text="XP Curve Visualization"
                                       Foreground="#5C6370"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>

                    </Border>

                    <!-- Formula -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="XP Formula"
                                   Foreground="#C0CAF5"/>
                        <TextBox Watermark="XP = Level^2 × 100"
                                 FontFamily="Consolas"/>
                    </StackPanel>

                </StackPanel>
            </Border>

            <!-- LEVEL-UP RULES -->
            <Border Background="#12151B"
                    CornerRadius="14"
                    Padding="20">

                <StackPanel Spacing="16">

                    <TextBlock Text="Level-Up Rules"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#FFFFFF"/>

                    <UniformGrid Columns="3"
                                 Rows="1"
                                 HorizontalAlignment="Stretch">

                        <!-- Stat Points -->
                        <Border Background="#0F1115"
                                CornerRadius="12"
                                Padding="16"
                                Margin="0,0,12,0">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Stat Points / Level"
                                           Foreground="#C0CAF5"/>
                                <TextBox Text="5"/>
                            </StackPanel>
                        </Border>

                        <!-- Skill Points -->
                        <Border Background="#0F1115"
                                CornerRadius="12"
                                Padding="16"
                                Margin="0,0,12,0">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Skill Points / Level"
                                           Foreground="#C0CAF5"/>
                                <TextBox Text="1"/>
                            </StackPanel>
                        </Border>

                        <!-- Bonus Rule -->
                        <Border Background="#0F1115"
                                CornerRadius="12"
                                Padding="16">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Bonus Rule"
                                           Foreground="#C0CAF5"/>
                                <TextBox Watermark="Every 10 levels gain +1 Talent"/>
                            </StackPanel>
                        </Border>

                    </UniformGrid>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>

</UserControl>
