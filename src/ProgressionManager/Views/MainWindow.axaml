<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProgressionManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProgressionManager.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Width="1200"
        Height="800"
        Icon="/Assets/avalonia-logo.ico"
        Title="ProgressionManager">

    <Design.DataContext>
      <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Bottom System Log -->
        <Border DockPanel.Dock="Bottom"
                Height="140"
                Background="#1E1E1E"
                Padding="10">
            <StackPanel>
                <TextBlock Text="SYSTEM LOG"
                           FontWeight="Bold"
                           Foreground="#9CDCFE"
                           Margin="0,0,0,6"/>
                <ScrollViewer>
                    <TextBlock Text="[SYSTEM]: You have reached Level 10. [WARNING]: Mana exceeds maximum in Chapter 37."
                               TextWrapping="Wrap"
                               Foreground="#D4D4D4"/>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Left Navigation -->
        <Border DockPanel.Dock="Left"
                Width="220"
                Background="#252526"
                Padding="10">
            <StackPanel Spacing="6">

                <TextBlock Text="NAVIGATION"
                           FontWeight="Bold"
                           Foreground="#C586C0"
                           Margin="0,0,0,10"/>

                <Button Content="ðŸŒ World Rules"/>
                <Button Content="âš” Skills"/>
                <Button Content="ðŸ§¬ Classes"/>
                <Button Content="ðŸ§ Races"/>
                <Button Content="ðŸ‘¤ Characters"/>
                <Button Content="ðŸ“ˆ Timeline"/>
                <Button Content="ðŸ” Validation"/>
                <Button Content="âš™ Settings"/>
            </StackPanel>
        </Border>

           <!-- Main Content -->
        <Grid Background="#1E1E1E"
              RowDefinitions="Auto,*"
              ColumnDefinitions="*">

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="World Rules â€“ Stats and XP"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#FFFFFF"
                       Margin="0,0,0,12"/>

            <!-- Content Area -->
            <TabControl Grid.Row="1">
                <!-- Stats Tab -->
                <TabItem Header="Stats">
                    <DataGrid AutoGenerateColumns="False" GridLinesVisibility="All">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Stat" Width="*"/>
                            <DataGridTextColumn Header="Base" Width="*"/>
                            <DataGridTextColumn Header="Growth" Width="*"/>
                            <DataGridTextColumn Header="Min" Width="*"/>
                            <DataGridTextColumn Header="Max" Width="*"/>
                            <DataGridTextColumn Header="Formula" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <!-- XP Curve Tab -->
                <TabItem Header="XP Curve">
                    <StackPanel Spacing="10">
                        <ComboBox SelectedIndex="0">
                            <ComboBoxItem Content="Linear"/>
                            <ComboBoxItem Content="Exponential"/>
                            <ComboBoxItem Content="Custom Formula"/>
                        </ComboBox>

                        <Border Height="260"
                                Background="#2D2D30"
                                CornerRadius="6"
                                HorizontalAlignment="Stretch">
                            <TextBlock Text="XP Curve Graph Placeholder"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#808080"/>
                        </Border>

                        <TextBox Watermark="XP = Level^2 * 100"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
